{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rp2: compile",
      "type": "process",
      "command": "${userHome}/.pico-sdk/ninja/v1.12.1/ninja",
      "args": ["-C", "${workspaceFolder}/build"],
      "group": "build",
      "problemMatcher": "$gcc",
      "windows": {
        "command": "${env:USERPROFILE}/.pico-sdk/ninja/v1.12.1/ninja.exe"
      }
    },
    {
      "label": "Compile Project",
      "type": "process",
      "command": "${userHome}/.pico-sdk/ninja/v1.12.1/ninja",
      "args": ["-C", "${workspaceFolder}/build"],
      "group": "build",
      "problemMatcher": "$gcc",
      "windows": {
        "command": "${env:USERPROFILE}/.pico-sdk/ninja/v1.12.1/ninja.exe"
      }
    },
    {
      "label": "rp2: bootsel",
      "type": "process",
      "command": "${env:HOME}/.pico-sdk/picotool/2.1.1/picotool/picotool",
      "args": ["reboot", "-f", "-u"],
      "windows": {
        "command": "${env:USERPROFILE}/.pico-sdk/picotool/2.1.1/picotool/picotool.exe"
      },
      "problemMatcher": []
    },
    {
      "label": "rp2: run",
      "type": "process",
      "command": "${env:HOME}/.pico-sdk/picotool/2.1.1/picotool/picotool",
      "args": ["load", "${command:raspberry-pi-pico.launchTargetPath}", "-fx"],
      "problemMatcher": [],
      "windows": {
        "command": "${env:USERPROFILE}/.pico-sdk/picotool/2.1.1/picotool/picotool.exe"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "rp2: flash",
      "type": "process",
      "command": "${userHome}/.pico-sdk/openocd/0.12.0+dev/openocd.exe",
      "args": [
        "-s",
        "${userHome}/.pico-sdk/openocd/0.12.0+dev/scripts",
        "-f",
        "interface/cmsis-dap.cfg",
        "-f",
        "target/${command:raspberry-pi-pico.getTarget}.cfg",
        "-c",
        "adapter speed 5000; program \"${command:raspberry-pi-pico.launchTargetPath}\" verify reset exit"
      ],
      "problemMatcher": [],
      "windows": {
        "command": "${env:USERPROFILE}/.pico-sdk/openocd/0.12.0+dev/openocd.exe"
      }
    },
    {
      "label": "host: compile",
      "type": "process",
      "group": "build",
      "command": "${userHome}/.pico-sdk/ninja/v1.12.1/ninja",
      "args": ["-C", "${workspaceFolder}/build_host"],
      "problemMatcher": "$gcc",
      "windows": {
        "command": "${env:USERPROFILE}/.pico-sdk/ninja/v1.12.1/ninja.exe"
      }
    },
    {
      "label": "host: run",
      "type": "process",
      "command": "${workspaceFolder}/build_host/mck-parting-c",
      "args": [],
      "group": "build",
      "problemMatcher": "$gcc",
      "dependsOn": ["host: compile"],
      "windows": {
        "command": "${workspaceFolder}/build_host/mck-parting-c.exe"
      }
    },
    {
      "label": "host: build active file",
      "type": "process",
      "command": "${userHome}/.pico-sdk/ninja/v1.12.1/ninja",
      "args": [
        "-C",
        "${workspaceFolder}/build_host",
        "${fileBasenameNoExtension}"
      ],
      "group": "build",
      "problemMatcher": "$gcc",
      "windows": {
        "command": "${env:USERPROFILE}/.pico-sdk/ninja/v1.12.1/ninja.exe"
      }
    },
    {
      "label": "host: run active file",
      "type": "process",
      "command": "${workspaceFolder}/build_host/${fileBasenameNoExtension}",
      "args": [],
      "group": "test",
      "problemMatcher": [],
      "dependsOn": ["host: build active file"],
      "windows": {
        "command": "${workspaceFolder}/build_host/${fileBasenameNoExtension}.exe"
      }
    }
  ]
}
